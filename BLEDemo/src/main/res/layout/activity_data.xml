        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="vertical" >

	<LinearLayout
	    android:layout_width="300dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginBottom="2dp"
	    android:layout_marginTop="2dp"
	    android:gravity="center_vertical"
	    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutByte1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@drawable/bg_edittext"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tvByte1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColorLink="#000000" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/edByte1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:digits="0123456789abcdefABCDEF"
            android:maxLength="2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutByte2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_edittext" >

        <TextView
            android:id="@+id/tvByte2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColorLink="#000000" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:text="TextView" />

        <EditText
            android:id="@+id/edByte2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:digits="0123456789abcdefABCDEF"
            android:maxLength="2" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvBoolLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioTrue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="true"
                android:textColorLink="#000000" />

            <RadioButton
                android:id="@+id/radioFalse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="false"
                android:textColorLink="#000000" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutData1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvData1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvLengthIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </LinearLayout>

        <EditText
            android:id="@+id/edData1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:typeface="monospace"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:digits="0123456789abcdefABCDEF" />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>